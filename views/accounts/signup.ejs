<% layout('layout') -%>

 <div class="row">
  <div class="col-lg-6 col-md-offset-3">

     <% if (errors.length > 0) { %>
      <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <!-- aria-label attribute is used to define a string that labels the current element. Use it in cases where a text label is not visible on the screen. -->
          <span aria-hidden="true">&times;</span>
          <!-- ARIA (Accessible Rich Internet Applications) defines a way to make Web content and Web applications more accessible to people with disabilities.The hidden attribute is new in HTML5 and tells browsers not to display the element.  -->
        </button>
     <%= errors %>
      </div>
     <% } %>
     
    <form method="post">

      <h1>Signup</h1>

      <div class="form-group">
        <label="name">Name: </label>
        <input type="text" class="form-control" name="name">
      </div>
      <div class="form-group">
       <label="email">Email: </label>
       <input type="email" class="form-control" name="email">
      </div>
      <div class="form-group">
       <label="password">Password: </label>
       <input type="password" class="form-control" name="password">
      </div>

      <button type="submit" class="btn btn-success">Submit</button>

    </form>
   </div>
 </div>
